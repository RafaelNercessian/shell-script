#!/bin/bash

recursao(){
	cd ~/Downloads/IMAGENS-LIVROS/
	for arquivo in *
	do
		if [ -d $arquivo ]
		then
			cd $arquivo
			for arquivo_dentro_diretorio in *
			do
				
arquivo_dentro_diretorio_sem_ext=$(ls $arquivo_dentro_diretorio | awk -F. '{ print $1 }')
				echo $arquivo_dentro_diretorio_sem_ext
			done
		cd ~/Downloads/IMAGENS-LIVROS/
		else
			recursao
		fi
	done
}

recursao
